<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">


        <TextView
            android:id="@+id/nameAnimalCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombe Animal"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/phylumName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aves"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/kindomName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="true"
            android:textSize="19sp" />
        <TextView
            android:id="@+id/nameScience"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre cientifico"
            android:textSize="19sp" />
        <TextView
            android:id="@+id/nameSpecies"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre de especie"
            android:textSize="19sp" />


</LinearLayout>